@model IEP_Projekat.Models.ChangeUsernameViewModel
@{
    ViewBag.Title = "Change Username";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeUsername", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Username Form</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Old username:</dt>
        <dd>
            @Model.OldUserName
        </dd>
    </dl>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NewUserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewUserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change username" class="btn btn-default" />
        </div>
    </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
