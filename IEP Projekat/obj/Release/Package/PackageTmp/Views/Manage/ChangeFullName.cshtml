@model IEP_Projekat.Models.ChangeFullNameViewModel
@{
    ViewBag.Title = "Change full name";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeFullName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Full Name Form</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Old full name:</dt>
        <dd>
            @Model.OldFullName
        </dd>
    </dl>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NewFullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewFullName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change full name" class="btn btn-default" />
        </div>
    </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
